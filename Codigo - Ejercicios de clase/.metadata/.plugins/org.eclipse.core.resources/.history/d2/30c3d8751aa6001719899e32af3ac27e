package test;
import unidades.*;

import org.junit.Assert;
import org.junit.Test;

import items.Capa;
import items.Escudo;
import mapa.Ubicacion;



public class testeo {

	@Test
	public void testArquero() {
		Ubicacion ubi = new Ubicacion(0, 0);
		Elemento arquero = new Arquero(ubi);
		System.out.println(arquero);

		ubi = new Ubicacion(1, 2);
		Elemento arquero2 = new Arquero(ubi);
		arquero2 = new Escudo(arquero2);
		System.out.println(arquero2);
		
		arquero.atacar(arquero2);
		System.out.println(arquero);
		System.out.println(arquero2);
	}
}
