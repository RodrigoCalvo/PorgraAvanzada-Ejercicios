package unidades;

import mapa.Ubicacion;

public class Caballero {	
	private final static int RANGO_MINIMO = 1;
	private final static int RANGO_MAXIMO = 2;
	private double salud;
	private double energia;
	private double defensa;
	private int cant_ataques;
	private double daño;

	public Caballero(Ubicacion u) {
		super();
		salud = 200;
		daño = 50;
		ubicacion = u;
	}

	public boolean puedoAtacar() {
		if(this.salud == 0)
			return false;
		if(this.cant_ataques == 3)
			return false;
		
		return true;
	}


	@Override
	public double getDaño() {
		// TODO Auto-generated method stub
		return daño;
	}


	@Override
	public double getEnergia() {
		// TODO Auto-generated method stub
		return energia;
	}


	@Override
	public double getDefensa() {
		// TODO Auto-generated method stub
		return defensa;
	}
	@Override
	public double getSalud() {
		return salud;
	}


	@Override
	public void ataco(Elemento e) {
		// TODO Auto-generated method stub
		
	}


	@Override
	public boolean puedoAtacar(Elemento e) {
		// TODO Auto-generated method stub
		return false;
	}
	

}
