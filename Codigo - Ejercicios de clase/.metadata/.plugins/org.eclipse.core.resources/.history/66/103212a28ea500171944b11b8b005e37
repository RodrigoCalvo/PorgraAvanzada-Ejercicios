package unidades;

import mapa.Ubicacion;

public class Soldado extends Unidad {	
	
	 public Soldado(Ubicacion u) {
		super();
		RANGO_MINIMO = 0;
		RANGO_MAXIMO = 0;
		defensa = 0;
		energia = 100;
		salud = 200;
		daño = 10;
		ubicacion = u;
	}
	@Override
	public double getDaño() {
		return 10;
	}
	@Override
	public double getEnergia() {
		return 100;
	}
	 
	@Override
	public double getDefensa() {
		 return 0;
	}
	
	public boolean puedoAtacar() {
		if(this.salud == 0)
			return false;
		if(this.energia == 0)
			return false;		
		
		return true;
	}

}
