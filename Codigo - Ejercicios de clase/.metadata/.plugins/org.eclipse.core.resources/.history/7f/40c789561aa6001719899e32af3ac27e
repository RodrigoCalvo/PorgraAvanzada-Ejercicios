package unidades;

import mapa.Ubicacion;

public class Soldado extends Unidad {

	
	public Soldado(Ubicacion u) {
		super();
		defensa = 0;
		energia = 100;
		salud = 200;
		daño = 10;
		ubicacion = u;
	}
	@Override
	public double getDaño() {
		return daño;
	}
	@Override
	public double getEnergia() {
		return energia;
	}
	 
	@Override
	public double getDefensa() {
		 return defensa;
	}
	@Override
	public double getSalud() {
		return salud;
	}
	
	public boolean puedoAtacar() {
		if(this.salud == 0)
			return false;
		if(this.energia == 0)
			return false;		
		
		return true;
	}
	@Override
	public void ataco(Elemento e) {
		// TODO Auto-generated method stub
		
	}
	@Override
	public boolean puedoAtacar(Elemento e) {
		// TODO Auto-generated method stub
		return false;
	}

}
