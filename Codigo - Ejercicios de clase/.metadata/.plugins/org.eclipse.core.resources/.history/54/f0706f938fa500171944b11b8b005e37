package unidades;

import mapa.Ubicacion;

public class Soldado extends Unidad {
	private double energia;
	private double defensa;
	private double salud;
	private double daño;
	
	 public Soldado(Ubicacion u) {
		super();
		defensa = 0;
		energia = 100;
		salud = 200;
		daño = 10;
		ubicacion = u;
	}
	@Override
	public double getDaño() {
		return daño;
	}
	@Override
	public double getEnergia() {
		return energia;
	}
	 
	@Override
	public double getDefensa() {
		 return 0;
	}
	
	public boolean puedoAtacar() {
		if(this.salud == 0)
			return false;
		if(this.energia == 0)
			return false;		
		
		return true;
	}
	@Override
	public void ataco(Unidad u) {
		// TODO Auto-generated method stub
		
	}
	@Override
	public boolean puedoAtacar(Unidad u) {
		// TODO Auto-generated method stub
		return false;
	}

}
