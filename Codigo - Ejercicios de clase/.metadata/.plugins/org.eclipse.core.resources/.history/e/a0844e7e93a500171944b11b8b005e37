package unidades;

import mapa.Ubicacion;

public class Arquero extends Unidad {
	private final static int RANGO_MINIMO = 2;
	private final static int RANGO_MAXIMO = 5;
	private int cant_flechas;

	public Arquero(Ubicacion u) {
		super();
		cant_flechas = 20;
		salud = 50;
		daño = 5;
		ubicacion = u;
	}
	
	@Override
	public double getDaño() {
		return daño;
	}
	@Override
	public double getEnergia() {
		 return 0;
	}
	 
	@Override
	public double getDefensa() {
		 return defensa;
	}
	@Override
	public double getSalud() {
		return salud;
	}
	
	@Override
	public boolean puedoAtacar(Unidad u) {
		if(this.ubicacion.distanciaHasta(u.getUbicacion()) < 2 || this.ubicacion.distanciaHasta(u.getUbicacion()) > 5)
			return false;
		if(this.cant_flechas < 1)
			return false;
		
		return true;
	}

	@Override
	public String toString() {
		return "Arquero [cant_flechas=" + cant_flechas + ", defensa=" + defensa + ", salud=" + salud + ", daño=" + daño
				+ ", ubicacion=" + ubicacion + "]";
	}

	@Override
	public void ataco(Unidad u) {
		this.cant_flechas--;
		
	}
	
}
