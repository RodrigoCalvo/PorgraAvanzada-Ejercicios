package items;

import mapa.Ubicacion;
import unidades.Elemento;
import unidades.Unidad;

public class Escudo extends UnidadDecorator{
	
	public Escudo (Elemento elemento){
		super(elemento);
		this.elemento = elemento;
	}
		 
	@Override
	public String toString() {
		return "Escudo [elemento=" + elemento + "]";
	}

	@Override
	public double getDaño() {
		return this.elemento.getDaño();
	}
	@Override
	public double getEnergia() {
		return this.elemento.getEnergia();
	}
	 
	@Override
	public double getDefensa() {
		return this.elemento.getDefensa() + 0.4;
	}
	@Override
	public double getSalud() {
		return this.elemento.getSalud();
	}

	@Override
	public void atacar(Elemento e) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public Ubicacion getUbicacion() {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public void meAtacan(double dañoRecibido) {
		// TODO Auto-generated method stub
		
	}

}
